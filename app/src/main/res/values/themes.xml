<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EsChef" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/morado</item>
        <item name="colorPrimaryVariant">@color/gris</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gris</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="cardViewStyle">@style/tarjetaDatos</item>
        <item name="android:fontFamily">@font/mada_black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.EsChef.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EsChef.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EsChef.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<style name="tarjetaDatos">
    <item name="android:fontFamily">@font/mada_black</item>
    <item name="android:textSize">20sp</item>
</style>


</resources>